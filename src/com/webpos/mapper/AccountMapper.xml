	<insert id="insert" parameterType="com.webpos.entity.Account"
		useGeneratedKeys="true" keyProperty="id">
		insert into _account (user_id,amount,type,ctime,status,all_eth,play_sum,recharge_sum,withdraw_sum,child_sum,balance,is_machine)

		values ( #{user_id,jdbcType=VARCHAR},
		#{amount,jdbcType=INTEGER},
		#{type,jdbcType=VARCHAR},
		#{ctime,jdbcType=TIMESTAMP},#{status,jdbcType=VARCHAR},#{all_eth,jdbcType=VARCHAR},
		#{play_sum,jdbcType=INTEGER},#{recharge_sum,jdbcType=INTEGER},#{withdraw_sum,jdbcType=INTEGER},#{child_sum,jdbcType=INTEGER}
		,#{balance,jdbcType=INTEGER},#{is_machine,jdbcType=INTEGER}
		)
	</insert>
	
	
	<update id="updateByPrimaryKeySelective" parameterType="com.webpos.entity.Account">
		update _account
		<set>
			<if test="status != null">
				status = #{status,jdbcType=VARCHAR}
			</if>
		</set>
		where id = #{id,jdbcType=BIGINT}
	</update>
	
	
	<select id="summaryWithdraw" resultType="com.api.vo.contans.SummaryWithdraw"
		parameterType="com.api.vo.contans.WithdrawQuery">
		select
		count(1) as user_sum,
		sum(amount) as amount_sum 
		from
		_account
		where 1 = 1 
		<if test="user_id != null and user_id != ''">
			and user_id = #{user_id} 
		</if>
		<if test="status != null and status != ''">
			and status = #{status} 
		</if>
		<if test="type != null and type != ''">
			and type = #{type} 
		</if>
		<if test="startDate != null and startDate != ''">
		    and ctime >= #{startDate} 
		</if>
		<if test="endDate != null and endDate != ''">
			<![CDATA[  
				 and ctime <= #{endDate} 
			 ]]>
		</if>
		
		
	</select>
